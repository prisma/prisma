{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": ["scripts", "src/__tests__", "**/tmp-*"]
}
