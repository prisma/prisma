{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "runtime-dist",
    "rootDir": "src/runtime",
    "declaration": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "tsBuildInfoFile": "tsconfig.runtime.tsbuildinfo"
  },
  "include": ["src/runtime"],
  "exclude": [
    "dist",
    "build",
    "cli",
    "examples",
    "runtime",
    "src/fixtures",
    "src/__tests__",
    "**/node_modules",
    "**/.*/"
  ]
}
