{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "incremental": true
  },
  "exclude": ["dist", "build", "src/__tests__", "scripts", "sandbox"]
}
