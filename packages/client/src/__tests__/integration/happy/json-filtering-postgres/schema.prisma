datasource db {
  provider = "postgresql"
  url      = env("TEST_POSTGRES_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id @default(uuid())
  email   String  @unique
  name    String?
  json    Json
  jsonOpt Json?
  posts   Post[]
}

model Post {
  id     String @id @default(uuid())
  title  String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
