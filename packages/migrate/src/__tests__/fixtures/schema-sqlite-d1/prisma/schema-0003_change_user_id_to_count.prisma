generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [count])
  authorId  Int
}

model User {
  id    Int
  email String  @unique
  name  String?
  count Int @id @default(autoincrement())
  Post  Post[]
}
