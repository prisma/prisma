{
  "name": "@refract/field-translator",
  "version": "0.1.0",
  "description": "Build-time database-specific field transformation code generators for Refract ORM",
  "keywords": ["refract", "orm", "database", "typescript", "code generation", "build-time"],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@refract/schema-parser": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm"],
    "dts": true,
    "clean": true,
    "external": ["@refract/schema-parser"]  
  }
}