generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  countryCode    String
  phone          String
  email          String   @unique
  createdAt      DateTime @default(now())
  
  // Generated/Computed columns (will be added via migration)
  // These are marked as optional to avoid TypeScript errors
  /// @generated ALWAYS AS (firstName || ' ' || lastName) STORED
  fullName       String?
  
  /// @generated ALWAYS AS (countryCode || ' ' || phone) STORED
  formattedPhone String?
  
  /// @generated ALWAYS AS (SUBSTRING(email FROM POSITION('@' IN email) + 1)) STORED
  emailDomain    String?
  
  posts          Post[]
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String?
  published   Boolean  @default(false)
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  basePrice   Decimal
  taxRate     Decimal  @default(0.0825) // 8.25% default tax
  
  /// @generated ALWAYS AS (basePrice * (1 + taxRate)) STORED
  totalPrice  Decimal?
}
