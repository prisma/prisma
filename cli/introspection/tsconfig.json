{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["dom", "esnext.asynciterable", "es2019.array"],
    "target": "es2018",
    "rootDir": "src",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "examples", "test", "test2"]
}
