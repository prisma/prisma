{
  "compilerOptions": {
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "build", "runtime", "examples", "src/__tests__", "fixtures"]
}
