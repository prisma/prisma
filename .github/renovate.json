{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "schedule": ["at any time"],
  "semanticCommits": "enabled",
  "masterIssue": true,
  "reviewers": ["@jolg42", "@timsuchanek", "@williamluke4"],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "devDependencies (non-major)",
      "automerge": "true",
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch", "minor"],
      "excludePackageNames": [
        "@prisma/engines",
        "@prisma/engines-version",
        "@prisma/studio",
        "@prisma/studio-server",
        "esbuild",
        "checkpoint-client",
        "sqlite3"
      ],
      "schedule": ["before 9am on Monday", "before 9am on Wednesday"]
    },
    {
      "groupName": "dependencies (non-major)",
      "depTypeList": ["dependencies"],
      "updateTypes": ["patch", "minor"],
      "excludePackageNames": [
        "@prisma/engines",
        "@prisma/engines-version",
        "checkpoint-client"
      ],
      "schedule": ["before 9am on Monday", "before 9am on Wednesday"]
    },
    {
      "groupName": "definitelyTyped",
      "automerge": "true",
      "packagePatterns": ["^@types/"],
      "updateTypes": ["patch", "minor"]
    },
    {
      "groupName": "esbuild",
      "packageNames": ["esbuild"]
    },
    {
      "groupName": "engines",
      "automerge": "true",
      "ignoreUnstable": false,
      "followTag": "latest",
      "packageNames": ["@prisma/engines", "@prisma/engines-version"]
    },
    {
      "groupName": "Studio",
      "automerge": "true",
      "packageNames": ["@prisma/studio", "@prisma/studio-server"],
      "updateTypes": ["patch", "minor"],
      "reviewers": ["@madebysid"]
    },
    {
      "groupName": "checkpoint-client",
      "packageNames": ["checkpoint-client"],
      "updateTypes": ["patch", "minor"],
      "reviewers": ["@Weakky"]
    },
    {
      "groupName": "react-prisma",
      "paths": ["src/packages/react-prisma/**"],
      "rangeStrategy": "replace",
      "schedule": ["before 9am on Monday"],
      "reviewers": ["@timsuchanek"]
    }
  ]
}
